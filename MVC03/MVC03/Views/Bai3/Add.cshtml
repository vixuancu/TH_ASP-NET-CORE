@{
    ViewData["Title"] = "Phép Cộng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Phép Cộng Hai Số</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Add">
                        <div class="mb-3">
                            <label for="a" class="form-label">Số thứ nhất:</label>
                            <input type="number" class="form-control" id="a" name="a" required>
                        </div>
                        <div class="mb-3">
                            <label for="b" class="form-label">Số thứ hai:</label>
                            <input type="number" class="form-control" id="b" name="b" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Tính Tổng</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Về Trang Chủ</a>
</div>
