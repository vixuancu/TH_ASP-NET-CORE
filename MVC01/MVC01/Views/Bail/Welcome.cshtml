@{
    ViewData["Title"] = "Lời chào";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.WelcomeMessage</h1>
    <p class="lead">Chào mừng bạn đến với ứng dụng MVC!</p>

    <div class="mt-4">
        <form method="get" action="@Url.Action("Welcome", "Bail")" class="row g-3 justify-content-center">
            <div class="col-auto">
                <label for="name" class="form-label">Nhập tên của bạn:</label>
            </div>
            <div class="col-auto">
                <input type="text" class="form-control" id="name" name="name" placeholder="Tên của bạn"
                    value="@ViewBag.Name">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Gửi lời chào</button>
            </div>
        </form>
    </div>

    <hr />
    <p>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Bail")">
            Quay lại trang thời gian
        </a>
        |
        <a class="btn btn-outline-primary" href="@Url.Action("Index", "Home")">
            Về trang chủ
        </a>
    </p>
</div>
